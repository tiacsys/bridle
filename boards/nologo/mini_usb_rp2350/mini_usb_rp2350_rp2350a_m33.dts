/dts-v1/;

#include <mem.h>
#include <raspberrypi/rpi_pico/rp2350a.dtsi>
#include <raspberrypi/rpi_pico/m33.dtsi>
#include <zephyr/dt-bindings/regulator/rpi_pico.h>

#include "mini_usb_rp2350-pinctrl.dtsi"

#include "mini_usb_connector.dtsi"
#include "mini_usb_pads.dtsi"

/ {
	model = "Nologo Mini USB RP2350 @ USB-CDC/ACM Concole";
	compatible = "nologo,mini-usb-rp2350", "nologo,mini-usb-rp2350-usbcons";

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &code_partition;
		zephyr,console = &cdc_acm_console_uart;
		zephyr,shell-uart = &cdc_acm_console_uart;
	};

	aliases {
		watchdog0 = &wdt0;
	};
};

&flash0 {
	status = "okay";
	reg = <0x10000000 DT_SIZE_M(4)>;

	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/* Reserved memory for the second stage bootloader */
		image_def: partition@0 {
			label = "image_def";
			reg = <0x0 0x100>;
			read-only;
		};

		/*
		 * Usable flash. Starts at 0x100, after the second stage
		 * bootloader. The partition size is 4MB minus the 0x100
		 * bytes taken by the second stage bootloader.
		 */
		code_partition: partition@100 {
			label = "code-partition";
			reg = <0x100 (DT_SIZE_M(4) - 0x100)>;
			read-only;
		};
	};
};

&wdt0 {
	status = "okay";
};

&timer0 {
	status = "okay";
};

&timer1 {
	status = "okay";
};

&dma {
	status = "okay";
};

gpio0_lo: &gpio0 {
	status = "okay";
};

&uart0 {
	status = "okay";
	pinctrl-0 = <&uart0_default>;
	pinctrl-names = "default";
	current-speed = <115200>;
	data-bits = <8>;
	parity = "none";
	stop-bits = "1";
};

zephyr_udc0: &usbd {
	status = "okay";
	cdc_acm_console_uart: cdc-acm-console-uart {
		compatible = "zephyr,cdc-acm-uart";
	};
};
