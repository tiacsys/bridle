#include <zephyr/dt-bindings/i2c/i2c.h>

&rpipico_i2c0 {
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;

	wspes_sens_voc: sgp40@59 {
		status = "okay";
		compatible = "sensirion,sgp40";
		friendly-name = "WSP Environment: air quality (VOC)";
		reg = <0x59>;
		enable-selftest;
	};

	wspes_sens_dof: mpu9250@68 {
		status = "okay";
		compatible = "invensense,mpu9250";
		friendly-name = "WSP Environment: accelerometer, gyroscope and magnetometer (9-DOF)";
		reg = <0x68>;
		accel-fs = <2>;
		accel-dlpf = "5.05";
		gyro-fs = <250>;
		gyro-dlpf = <5>;
		gyro-sr-div = <9>;
	};

	wspes_sens_thp: bme280@76 {
		status = "okay";
		compatible = "bosch,bme280";
		friendly-name = "WSP Environment: temperature, humidity and air pressure";
		reg = <0x76>;
	};
};
